{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}

    <!-- Header -->
    <header class="masthead d-flex">
        <div class="container text-center my-auto">
            <h1 class="mb-1">Stylish Portfolio</h1>
            <h3 class="mb-5">
                <em>A Free Bootstrap Theme by Start Bootstrap</em>
            </h3>
            <a class="btn btn-primary btn-xl js-scroll-trigger" href="#tarifs">Nos Tarifs</a>
            <a class="btn btn-secondary btn-xl js-scroll-trigger" href="#reserver">Réserver</a>
        </div>
    </header>

    <!-- Tarifs -->
    <section class="content-section bg-light" id="tarifs">
        <div class="container text-center">
            <div class="row">
                <div class="col-lg-10 mx-auto">
                    <h2>Nos Tarifs</h2>
                    <p class="lead mb-5">This theme features a flexible, UX friendly sidebar menu and stock photos from our
                        friends at
                        <a href="https://unsplash.com/">Unsplash</a>!</p>
                    <div class="row">
                        <div class="col-md-3 col-6">
                            <div class="card" style="height:200px; background-color: #69626E; ">Normal</div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="card bg-primary" style="height:200px;  ">Enfant</div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="card" style="height:200px; background-color: #69626E; ">Sénior</div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="card bg-primary" style="height:200px;  ">Réduit</div>
                        </div>
                    </div>
                    <a class="btn btn-dark btn-xl js-scroll-trigger mt-5" href="#services">Réserver</a>
                </div>
            </div>
        </div>
    </section>


    <!-- Réserver -->
    <section class="callout" id="reserver">
        <div class="container text-center" style="background-color: rgba(0,0,0, 0.5); color: #f4f4f4;">
            <h2 class="mx-auto mb-5">Welcome to
                <em>your</em>
                next website!</h2>


                {{ include('forms/_reservation.html.twig') }}


        </div>
    </section>

    <!-- Infos -->
    <section class="content-section" id="infos">
        <div class="container">
            <div class="content-section-heading text-center">
                <h2 class="mb-5">Infos Pratiques</h2>
            </div>
            <div class="row">

                <div class="col-4">Telephone</div>
                <div class="col-4">Horaires</div>
                <div class="col-4">Adresse</div>

            </div>
        </div>
    </section>

{% endblock %}

{% block javascripts %}{% endblock %}
